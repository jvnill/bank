= form_for @transaction do |f|
  %table
    %thead
      %tr
        %th Product
        %th Quantity
        %th Price
        %th Total

    %tbody
      - @details.each do |product_name, detail|
        %tr
          %td= product_name
          %td= detail['quantity']
          %td= detail['price']
          %td= detail['quantity'].to_d * detail['price'].to_d

    %tfoot
      %tr
        %td{ colspan: 3 } TOTAL
        %td= number_to_currency session[:price]

  = f.submit 'Process Transaction'
